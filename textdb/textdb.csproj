<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <PackageId>TextDB</PackageId>
    <PackageVersion>4.0.0</PackageVersion>
    <Description>A simple database which writes data into text file. No setup or confiuration is required.</Description>
    <Authors>Nivash Ramachandran</Authors>
    <PackageProjectUrl>https://github.com/rnivash/textdb</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>database,csv,inline,db</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.1" />
  </ItemGroup>

</Project>
